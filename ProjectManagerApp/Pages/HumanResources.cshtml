@page
@model ProjectManagerApp.Pages.HumanResourcesModel
@{
	ViewData["Title"] = "Seznam zamìstnancù";
}

<h2>Seznam zamìstnancù</h2>

<!-- Obsah stránky se seznamem zamìstnancù -->
<table class="table">
	<!-- Tabulka se zamìstnanci -->
    <thead>
        <tr>
            <th>ID</th>
            <th>Jméno a pøíjmení</th>
            <th>E-mail</th>
            <th>Telefon</th>
            <th>Vytíženost</th>
            <th>Status</th>
            <th>Akce</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model.Employees)
        {

            <tr>
                <td>@employee.Id</td>
                <td>@employee.Name</td>
                <td>@employee.Email</td>
                <td>@employee.Phone</td>
                <td class="col-sm-3"> 
                    <div class="progress">
                        <div class="progress-bar @(employee?.Workload > 100 ? "bg-danger" : "bg-success")" role="progressbar" style="width: @employee?.Workload%" aria-valuenow="@employee?.Workload" aria-valuemin="0" aria-valuemax="100">@employee?.Workload %</div>
                    </div>
                </td>
                <td>
                    <div class="col-sm-2">
                        <span class="badge @employee?.GetIsActiveStatusColor()">
                            @employee?.GetIsActiveStatusString()
                        </span>
                    </div>
                </td>
                <td>
                    <a class="btn btn-light" style="font-size: 12px; padding: 4px 6px;" asp-page="/EmployeeDetails" asp-route-id="@employee.Id">Karta zamìstnance</a>
                </td>

            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <a class="btn btn-success" asp-page="/EmployeeAdd">Pøidej zamìstnance</a>
</div>

@* Skript pro zobrazení varovného okna, pokud existuje varovná hláška v TempData *@
@section Scripts {
    @if (TempData["EmployeeAdded"] != null)
    {
        <script>
            window.onload = function() {
                alert("@TempData["EmployeeAdded"]");
            };
        </script>
    }
}